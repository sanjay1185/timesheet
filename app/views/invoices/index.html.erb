<% form_tag invoice_search_path, :method => 'get', :id => "frmInvoices" do %>
<% right_side_html = "<div class=\"header_combo_right\">Invoice By Client: " + select_tag("client_id", options_from_collection_for_select(@client_list, :id, :name, @client_id.to_i), :id => 'client_id', :style =>"width: 180px;" ) + '</div>' %>

  <div id="nav-bar-box">
    <%= two_column_nav_bar_layout2("Invoicing&nbsp;#{help_link('/help/invoicing', 'Help on Invoicing','middle', 500, 400)}", right_side_html) %>
  </div>

<div id="blue-box">
    <div class="padder">
<table cellpadding="4" cellspacing="3" style="border-collapse:collapse;">
  <tr>
    <td width="33.3%" style="border-right: black solid 1px; vertical-align:top">
      <table width="100%" cellpadding="0" cellspacing="0">
        <tr><td class="header" colspan="2">
          <table width="100%" cellpadding="2" cellspacing="0">
            <tr><td style="vertical-align:middle;font-size:1.2em">Step 1 - Search</td><td align="right"><%= submit_tag('Search', :class => 'generalButton') %></td></tr>
          </table>
        </td></tr>
        <tr>
          <td class="leftHeader" style="padding-top: 4px">From:</td>
          <td style="padding-top: 4px"><%= calendar_date_select_tag 'from_date', @from_date.nil? ? Date.today << 1 : @from_date, :popup => "force", :year_range => 10.years.ago..0.years.from_now, :size => 17  %></td>
        </tr>
        <tr>
          <td class="leftHeader">To:</td>
          <td ><%= calendar_date_select_tag 'to_date', @to_date.nil? ? Date.today : @to_date, :popup => "force", :year_range => 10.years.ago..0.years.from_now, :size => 17 %></td>
        </tr>
        <tr>
          <td align="right"><input name="inactive" type="checkbox" <% if !@inactive.nil? %>checked<% end %> /></td><td style="vertical-align:middle">Include inactive invoices?</td>
        </tr>
        <tr>
          <td align="right"><input name="signed_off" type="checkbox" <% if !@signed_off.nil? %>checked<% end %> /></td><td style="vertical-align:middle">Include signed-off invoices?</td>
        </tr>
      </table>
    </td>
    <td style="border-right: black solid 1px;vertical-align:top">
      <table width="100%" cellpadding="0" cellspacing="0">
        <tr><td class="header" colspan="2"><table width="100%" cellpadding="2" cellspacing="0"><tr><td style="vertical-align:middle;font-size:1.2em">Step 2 - Export</td><td align="right"><%= submit_tag('Export', :class => 'generalButton') %></td></tr></table></td></tr>
        <tr><td colspan="2" style="padding-top: 4px">Select the invoices from the list below and the file format format to export to.</td></tr>
        <tr>
          <td class="leftHeader" style="padding-top: 4px">Format:</td>
          <td style="padding-top: 4px"><%= select_tag('exportFormat', options_for_select(@formats, @selectedFormat.blank? ? 'CSV' : @selectedFormat)) %></td>
        </tr>
      </table>
    </td>
    <td width="33.3%" valign="top">
      <table width="100%" cellpadding="0" cellspacing="0">
        <tr><td class="header" colspan="2"><table width="100%" cellpadding="2" cellspacing="0"><tr><td style="vertical-align:middle;font-size:1.2em">Step 3 - Sign-Off</td><td align="right"><%= submit_tag('Sign-Off', :class => 'generalButton') %></td></tr></table></td></tr>
        <tr><td colspan="2" style="padding-top: 4px">Select the invoices from the list below that you wish to mark as <i>signed-off</i>. After clicking the <i>Sign-Off</i> button they will not appear in subsequent searches.</td></tr>
      </table>
    </td>
  </tr>
          
        </table>
</div>

</div>

<div id="blue-box2">
  <div class="padder">
<table width="100%" cellspacing="0" cellpadding="2">
<tr>
  <td class="header">&nbsp;</td>
  <td class="header row_border_right">Invoice Date</td>
  <td class="header row_border_right">Client</td>
  <td class="header row_border_right">Net Amt</td>
  <td class="header row_border_right">Tax Amt</td>
  <td class="header row_border_right">Total</td>
  <td class="header">Exported Date</td>
</tr>
<% if !@invoices.nil? && @invoices.length > 0 %>

<% for invoice in @invoices %>

<tr>
  <td class="row_border_bottom"><%= check_box_tag "ids[]", invoice.id %></td>
	<td class="row_border_bottom row_border_right"><%= link_to invoice.invoiceDate.to_s(:uk_date), edit_invoice_path(invoice.id, :from => @from_date, :to => @to_date, :client_id => (@client_id unless @client_id.blank?), :inactive => @inactive, :signed_off => @signed_off) %></td>
    <td class="row_border_bottom row_border_right"><%=h invoice.client.name %></td>
    <td class="row_border_bottom row_border_right"><%=h sprintf("%.2f", invoice.netAmount.to_f) %></td>
    <td class="row_border_bottom row_border_right"><%=h sprintf("%.2f", invoice.taxAmount.to_f) %></td>
    <td class="row_border_bottom row_border_right"><%=h sprintf("%.2f", invoice.grossAmount.to_f) %></td>
    <td class="row_border_bottom"><%= invoice.lastExportDate.nil? ? "&nbsp;" : invoice.lastExportDate.to_formatted_s(:uk_date_time_24) %></td>
</tr>

<% end %>
<% else %>
  <tr>
    <td colspan="7">&nbsp;</td>
  </tr>
  <tr>
    <td colspan="7" align="center">Nothing to display</td>
  </tr>
<% end %>
  <tr>
    <td colspan="7">&nbsp;</td>
  </tr>
</table>
<% end %>
      </div>
</div>
<script type="text/javascript">

    var navbarbox = RUZEE.ShadedBorder.create({corner:8, border:1});
    navbarbox.render('nav-bar-box');
    var bluebox = RUZEE.ShadedBorder.create({corner:8, border:1});
    bluebox.render('blue-box');
    var bluebox2 = RUZEE.ShadedBorder.create({corner:8, border:1});
    bluebox2.render('blue-box2');

</script>