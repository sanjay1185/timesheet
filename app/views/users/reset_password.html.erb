<div class="login_content">

<div id="loginContainer" style="z-index: 1000">
  <div>
    <% form_for :user, :url => {:action => "reset_password"} do |form| %>
      <div class="loginForm" >
        <table>
          <% if flash[:notice] %>
            <tr><td colspan="2"><span style="color: green"><%= flash[:notice] %></span></td></tr>
          <% end %>
          <% if flash[:alert] %>
            <tr><td colspan="2"><span style="color: red"><%= flash[:alert] %></span></td></tr>
          <% end %>
          <tr>
           <td colspan="2" class="definition prompt" style="text-align: center">Please enter and confirm your new your password</td>
          </tr>
          <tr>
            <td class="term"><label for="user_login">password:</label></td>
            <td class="definition"><%= form.password_field :password %></td>
          </tr>
          <tr>
            <td class="term"><label for="user_password">confirm:</label></td>
            <td class="definition"><%= form.password_field :password_confirmation %></td>
          </tr>

        </table>
      </div>

      <div class="loginFormButton" id="loginButtonBox">
        <input id="loginButton" name="commit" type="submit" value="Change" />
      </div>
      <br />
      <br />
      <script language="JavaScript">
        $('user_login').focus()
      </script>

    <% end -%>

  </div>
</div>

