<div id="nav-bar-box">
    <%= two_column_nav_bar_layout2("Statistics (TEST PAGE)", "") %>
</div>
<div id="blue-box">
    <div class="padder">
    	<table width="100%" cellspacing="0" cellpadding="2">
    		<!-- Current stats -->
    	<tr>
    		<td><%= google_pie_chart([["All Clients", @no_of_clients], ["Active Clients", @no_of_active_clients]], :width => 325, :height => 150, :bgcolor => 'E8F1FA') %></td>
			
			<td><%= google_pie_chart(@clients_by_timesheets, :width => 325, :height => 150, :bgcolor => 'E8F1FA') %></td>
    	</tr>
			<!-- historic stats -->
		<tr>
    		<td>% Manual TS Processed</td>
			<td>% Timesheets submitted on time</td>
		</tr>
		<tr>
			<td>Busiest Clients (Clients by active contract)</td>
			<td>List of stats?</td>
    	</tr>
		</table>
		
	<p>Number of clients: <%= @no_of_clients %></p>
	<p>Number of active clients: <%= @no_of_active_clients %> (<%= @active_clients_percent %>%)</p>
	<p>Number of active contracts: <%= @no_of_active_contracts %></p>
</div>
</div>

<script type="text/javascript">
    
    var navbarbox = RUZEE.ShadedBorder.create({
        corner: 8,
        border: 1
    });
    navbarbox.render('nav-bar-box');
    var bluebox = RUZEE.ShadedBorder.create({
        corner: 8,
        border: 1
    });
    bluebox.render('blue-box');
    
</script>