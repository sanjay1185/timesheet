    <td>Fax: <label class="red">*</label></td>
    <td><%= text_field :agency, :fax, :maxlength => 30, :size => 30 %></td>
  </tr>
  <tr>
    <td>Company Email:  <label class="red">*</label></td>
    <td><%= text_field :agency,:email, :size => 30, :maxlength => 100 %></td>
  </tr>
 
 
</table>
            </td>
            <td valign="top"> <!-- right side-->
              <table>
                <tr>
            <td colspan="2" class="gray_border_bottom" style="font-size: 1.3em; text-align: center;">User Information</td>
          </tr>
          <tr>
            <td colspan="2">&nbsp;</td>
          </tr>
                 <tr>
    <td>Login:  <label class="red">*</label></td>
    <td><%= text_field :user, :login, :maxlength => 15, :size => 12, :id => 'login' %><div style="display: inline;vertical-align: middle; left: 5px" id="answer"></div>&nbsp;<%= ajax_login_check %></td>
  </tr>
  <tr>
    <td><% @titles = ['Mr', 'Mrs', 'Miss'] %><label>Title:</label> <label class="red">*</label></td>
    <td><%= select_tag 'selected_title', options_for_select(@titles, 'Mr') %>
    </td>
  </tr>
  <tr>
    <td>First Name:  <label class="red">*</label></td>
    <td><%= text_field :user, :firstName, :maxlength => 30, :size => 20 %></td>
  </tr>
  <tr>
    <td>Last Name:  <label class="red">*</label></td>
    <td><%= text_field :user, :lastName, :maxlength => 30, :size => 20 %></td>
  </tr>
  <tr>
    <td>Password:  <label class="red">*</label></td>
    <td><%= password_field :user, :password, :maxlength => 20, :size => 20 %></td>
  </tr>
  <tr>
    <td>Confirm:  <label class="red">*</label></td>
    <td><%= password_field :user, :password_confirmation, :id => 'pwd_conf', :maxlength => 20, :size => 20 %></td>
  </tr>
  <tr>
    <td>Email: <label class="red">*</label></td>
    <td><%= text_field :user, :email, :size => 30, :maxlength => 100 %></td>
  </tr>
  <tr>
    <td>Confirm Email: <label class="red">*</label></td>
    <td><%= text_field :user, :email_confirmation, :size => 30, :maxlength => 100 %></td>
  </tr>
  <tr>
            <td colspan="2">&nbsp;</td>
