<% form_tag( 'contractors', :method => 'get' ) do %>

  <div id="nav-bar-box">
    <%= two_column_nav_bar_layout2("Workers", "#{select_tag('query_status', options_for_select(@statuses, @selected_status), :onchange => 'this.form.submit();')}&nbsp;&nbsp;<div style=\"position:relative;display:inline;margin:0; top: -2px\">#{link_to('Invite New', invite_workers_agency_path)}</div>") %>
  </div>

<% end %>
<% contractors_page = params[:page].nil? ? "1" : params[:page] %>
<div id="blue-box">
  <div class="padder">
<table width="100%" cellspacing="0" cellpadding="2">
<tr class="heading">
  <td class="header row_border_right"><%= sort_link 'First Name', 'firstName', @selected_column %></td>
  <td class="header row_border_right"><%= sort_link 'Last Name', 'lastName', @selected_column %></td>
  <td class="header row_border_right"><%= sort_link 'City', 'city', @selected_column %></td>
  <td class="header row_border_right"><%= sort_link 'Email', 'email', @selected_column %></td>
  <td class="header row_border_right"><%= sort_link 'Phone', 'phone', @selected_column %></td>
  <td class="header"><%= sort_link 'Mobile', 'mobile', @selected_column %></td>
</tr>

  <% if @users.length > 0 %>
    <% for user in @users %>

    <tr>
      <td class="row_border_bottom row_border_right"><%= link_to user.firstName, view_contractor_agency_path(session[:agencyId], :contractor_id => user.contractor_id) + "&contractors_page=" + contractors_page %></a></td>
      <td class="row_border_bottom row_border_right"><%= link_to user.lastName, view_contractor_agency_path(session[:agencyId], :contractor_id => user.contractor_id) + "&contractors_page=" + contractors_page %></a></td>
      <td class="row_border_bottom row_border_right"><%=h user.city %></td>
      <td class="row_border_bottom row_border_right"><%=h user.email %></td>
      <td class="row_border_bottom row_border_right"><%=h user.phone %></td>
      <td class="row_border_bottom"><%=h user.mobile %></td>
    </tr>

  <% end %>
<% else %>
  <tr>
    <td colspan="6">&nbsp;</td>
  </tr>
  <tr>
    <td colspan="6" align="center">No workers to display</td> 
  </tr>
<% end %>
<tr><td colspan="6"><%= will_paginate(@users) %></td></tr>
<tr>
    <td colspan="6">&nbsp;</td>
  </tr>
</table>
</div>
</div>
<script type="text/javascript">

  var navbarbox = RUZEE.ShadedBorder.create({corner:8, border:1});
  navbarbox.render('nav-bar-box');
  var bluebox = RUZEE.ShadedBorder.create({corner:8, border:1});
  bluebox.render('blue-box');

</script>